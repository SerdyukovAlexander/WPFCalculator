<Window x:Class="WpfCalc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCalc"
        mc:Ignorable="d"
        Title="Calculator" Height="400" Width="700">
    <Grid x:Name="MainRoot" Background="LightCyan">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Введите выражение:" Margin="23 0 0 100" FontFamily="Impact" Foreground="#FF140488" />
        <TextBox x:Name="inputExpression" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" Margin="0,0,0,100" SelectionBrush="#FF888D90" >
            <TextBox.Background>
                <ImageBrush/>
            </TextBox.Background>
        </TextBox>
        <TextBlock Grid.Row="1" Grid.Column="1" Text="Результат:" Margin="80,7,0,100" Foreground="#FF140488" FontFamily="Impact"/>
        <TextBlock Grid.Column="2" Margin="0,128,0,100" x:Name="resultstr" Grid.RowSpan="2" RenderTransformOrigin="0.509,-0.063"/>
        <Button Grid.Column="2" Grid.Row="2" Content="Вычисление" Margin="0 0 0 100" Click="Showresult_Click" Background="#FF7502ED" FontFamily="Impact" Foreground="White"/>

    </Grid>
</Window>
